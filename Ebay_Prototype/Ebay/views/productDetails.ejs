<!DOCTYPE html>
<html>
<head>
	<title>eBay | Home</title>
	<script src="http://code.jquery.com/jquery-2.0.3.min.js"></script>
	<link rel="stylesheet" href="//code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css">
	<link rel="stylesheet" type="text/css" href="../stylesheets/style.css">
	<script src="//code.jquery.com/ui/1.11.1/jquery-ui.js" type="text/javascript"></script>


	<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
	<link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
	<script src="../bootstrap/js/bootstrap-rating-input.js" type="text/javascript"></script>
	
	<script src="/Scripts/signup.js"></script>
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" type="text/css">
</head>
<body >

	<div  >
		<%- include header.ejs %>
	</div>
	

	<div  class="signup-body">
		<div id="content">
			<div id="my-tab-content" class="tab-content">
				<div class="tab-pane active" id="allItems">

					<div class="row header">

						<div class="well">
							<div class="row">
								
								<div class="col-sm-12 col-xs-12 col-md-4 col-lg-4">
									<div class="thumbnail bootsnipp-thumb">
										<div>
											<p class="pull-right view-counts hidden-md">

												<span class="label label-info" data-toggle="tooltip" title="" data-original-title="">
													<% if(itemCondition==1){ %>
													New</span>
													<%}%>
													<% if(itemCondition==2){ %>
													Refurbished</span>
													<%}%>
													
												</p>
												<p class="lead snipp-title">
													<%= name %>
												</p>
												<p><i><%= description %></i></p>
												<p class="boldtext">Seller: <span class="bluetext"> <%= firstName%> <%= lastName%></span><span style="color:red"><input type="number" data-max="5" data-min="1" data-empty-value="0" data-clearable="remove" name="sellerRating" id="sellerRating" class="rating" /></p></span>

												
												
												<% if(productType==1) { %>
												<p><span class="boldtext">Quantity left: </span><%= quantity %>
													<p><label class="boldtext">Buy Quantity: </label>
														<%if(quantity>=5){%>
														<input type="number" name="txtqty" min="1" max="5" id="all_txtqty_<%=productId%>" value="1"></p>
														
														<%} else {%>
														
														<input type="number" name="txtqty" min="1" max="<%=quantity%>" id="all_txtqty_<%=productId%>" value="1"></p>
														<%}%>
														<p class="boldtext"><h3>Now: US$ <%= basePrice %></h3></p>
														
														
														<% } else { %>        
														<p>Time left: </p></p>
														<p class="boldtext"><h3>Current Bid: US$ <%= basePrice %></h3></p>
														<p><label class="boldtext">Place a Bid: </label><input type="text1" name="txtqty"  id="a_txtqty_<%=productId%>" ><small style="color:grey">
															<br>
															Enter US $<%= (basePrice) %> or more
														</small></p></p>
														
														<% } %>
														<p class="boldtext">Least Price: <span class="textstrikeoff">$ <%= basePrice+(basePrice/2) %></span></p>   
														<p class="boldtext"><h3>Current Bid: US$<span id="a_highest_price_<%=productId%>"><%= basePrice %></span> </h3></p> 
														

													</div>

													<div class="caption">
														<p><% if(productType==1) { %>
															
															<button type="button" class="btn btn-primary center-block" onclick="placeBid(1,<%=productId%>)">Buy It Now</button>
															<% } else { %>
															
															<button type="button" class="btn btn-primary center-block" onclick="placeBid(2,<%=productId%>)">Place a Bid</button>
															<%if(typeof(isSeller)!="undefined"){%>
																	<%if(isSeller){%>
																				<button type="button" class="btn btn-primary center-block" onclick="endBidding(<%=productId%>)">End bidding</button>
																		<%}%>
															<%}%>
															
															<% } %>
															<img style="margin-left: 150px;" src="../images/paypal_logo.png" alt="PayPal" border="0"></p>
														</div>
														
														<% 
														var prodReview="No Reviews added";
														if(review!=null && review!=""){
															prodReview = review;
														} 
														%>
														<p><span class="boldtext">Review: </span><i><%=prodReview%></i></p>
													</div>
												</div>
												

												</div>
											</div>
										</div>
									</div>
								</div>
								
								
								
								

							</div>    
							

						</div>
						<div class="alert-box error" id="errorMessage"><span id="error-span"></span></div>
						<div class="alert-box success" id="successMessage"><span id="success-span"></span></div>
					</body>
					<link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">
					<script src="//code.jquery.com/jquery-1.10.2.js"></script>
					<script src="//code.jquery.com/ui/1.11.2/jquery-ui.js"></script>
					<script src="../Scripts/home.js"></script>
					</html>